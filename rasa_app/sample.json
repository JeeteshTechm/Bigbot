{
  "bot_id": "samplebot",
  "message": "Hello, how can I help you?",
  "intents": [
    {
      "name": "greet",
      "utterances": [
        "Hi",
        "Hello",
        "Hey",
        "Hi there"
      ],
      "responses": [
        "Hello! How can I assist you?",
        "Hi there! How may I help you?",
        "Hey! How can I assist you today?"
      ]
    },
    {
      "name": "goodbye",
      "utterances": [
        "Bye",
        "Goodbye",
        "See you later",
        "See ya"
      ],
      "responses": [
        "Goodbye! Have a nice day.",
        "See you later. It was nice talking to you.",
        "Bye! Talk to you soon."
      ]
    },
    {
      "name": "inform",
      "utterances": [
        "I want to buy a {product}",
        "I am interested in purchasing a {product}",
        "Can you help me buy a {product}?"
      ],
      "responses": [
        "Sure, I can help you buy a {product}. May I know your name?",
        "Of course! I'd be happy to help you purchase a {product}. Can you tell me your name?",
        "Absolutely! Before we begin, can you tell me your name?"
      ],
      "slots": [
        {
          "name": "product",
          "type": "text"
        },
        {
          "name": "name",
          "type": "text"
        }
      ]
    },
    {
      "name": "weather",
      "utterances": [
        "what's the weather like today?",
        "what's the forecast?",
        "will it rain today?"
      ],
      "responses": [
        "Here's the current weather in New York:",
        "{api_response}"
      ],
      "api_call": {
        "url": "https://api.weatherapi.com/v1/current.json?key=<your_api_key>&q=New%20York&aqi=no",
        "method": "GET"
      },
      "response_field": "current.condition.text"
    },
    {
      "name": "news",
      "utterances": [
        "What's the latest news?",
        "What's happening in the world?",
        "Tell me some news"
      ],
      "responses": [
        "Here are the latest news headlines:",
        "{api_response}"
      ],
      "api_call": {
        "url": "https://newsapi.org/v2/top-headlines?country=us&apiKey=<your_api_key>",
        "method": "GET"
      },
      "response_field": "articles.[0].title"
    },
    {
      "name": "joke",
      "utterances": [
        "Tell me a joke",
        "Give me a funny joke",
        "I need a laugh"
      ],
      "responses": [
        "Here's a funny joke for you:",
        "{api_response}"
      ],
      "api_call": {
        "url": "https://official-joke-api.appspot.com/jokes/random",
        "method": "GET"
      },
      "response_field": "setup"
    }
  ],
  "entities": [
    {
      "name": "product",
      "values": [
        "laptop",
        "smartphone",
        "tablet",
        "camera"
      ]
    }
  ]
}
